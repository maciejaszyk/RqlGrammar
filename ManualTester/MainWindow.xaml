<Window x:Class="ManualTester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManualTester"
        mc:Ignorable="d"
        Title="ManualTester" Height="450" Width="800">
    <Grid>
        <GroupBox Header="Error msg:" Margin="10,259,10,10">
            <TextBox HorizontalAlignment="Left" Margin="10,0,0,0" Text="" Name="ErrorBox" TextWrapping="Wrap" Width="760"/>
        </GroupBox>
        <TextBox  
                  AcceptsReturn="True"
                  VerticalScrollBarVisibility="Visible" HorizontalAlignment="Left" Name="Rql" TextChanged="Rql_OnTextChanged" Margin="24,15,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="371" Height="244"/>
        <TextBox  
            AcceptsReturn="True"
            VerticalScrollBarVisibility="Visible" HorizontalAlignment="Left" x:Name="ErrorShow" IsEnabled="False" Margin="400,15,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="390" Height="244"/>

    </Grid>
</Window>
